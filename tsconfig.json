{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
